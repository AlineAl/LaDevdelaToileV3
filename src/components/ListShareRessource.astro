---
import CardShareRessource from "./CardShareRessource.astro";

interface Props {
    title: string;
    data: {
        title: string;
        author: string;
        description: string;
        path: string;
        imagePath: string;
    }[];
}

const { title, data } = Astro.props;

---
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center">{ title }</h1>
    {data.map((d) => (
        <CardShareRessource title={d.title} author={d.author} description={d.description} path={d.path} imagePath={d.imagePath} />
    ))}
</div>